<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="GoblinMan.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:GoblinMan"
    Shell.FlyoutBehavior="Disabled">

    

    <TabBar>
        <Tab Title="Goblins!" >
            <ShellContent
                Title="Goblin Manager"
                ContentTemplate="{DataTemplate local:MainPage}"
                Route="MainPage" />
        </Tab>
        <Tab Title="Create New">
            <ShellContent ContentTemplate="{DataTemplate local:NewGoblinPage}"/>
        </Tab>
        <Tab Title="My Cart">
            <ShellContent ContentTemplate="{DataTemplate local:MyCartPage}"/>
        </Tab>
    </TabBar>

</Shell>
